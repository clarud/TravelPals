    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-http-proxy": "^1.6.7",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0"
  }
